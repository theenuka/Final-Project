# Backend services environment (copy to backend/.env.docker for Docker Compose)
MONGODB_CONNECTION_STRING=mongodb://mongo:27017/hotel-booking
FRONTEND_URL=http://localhost:4173
JWT_SECRET_KEY=a-secure-and-random-jwt-secret-key-for-dev
ALLOW_ROLE_FROM_REGISTER=true
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=30
PASSWORD_RESET_TOKEN_TTL_MINUTES=60
VERIFICATION_CODE_TTL_MINUTES=15
REQUIRE_VERIFIED_EMAIL_FOR_LOGIN=false
LOYALTY_POINTS_PER_CURRENCY=0.1

# Service-to-service auth
INTERNAL_SERVICE_API_KEY=local-internal-key
NOTIFICATION_SERVICE_KEY=local-internal-key

# Asgardeo (OIDC) configuration â€“ replace with your tenant + SPA client
ASGARDEO_TENANT_DOMAIN=your-asgardeo-tenant
ASGARDEO_ORG_URL=https://api.asgardeo.io/t/your-asgardeo-tenant
ASGARDEO_CLIENT_ID=your-asgardeo-client-id
ASGARDEO_AUDIENCE=your-asgardeo-client-id
ASGARDEO_ISSUER=https://api.asgardeo.io/t/your-asgardeo-tenant/oauth2/token
ASGARDEO_JWKS_URL=https://api.asgardeo.io/t/your-asgardeo-tenant/oauth2/jwks

# Optional: Stripe
STRIPE_API_KEY=sk_test_your_stripe_secret_key

# Notification delivery
SENDGRID_API_KEY=SG.your_sendgrid_api_key
NOTIFICATION_FROM_EMAIL=no-reply@phoenix-booking.local
NOTIFICATION_FROM_NAME=Phoenix Booking
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
NOTIFICATION_QUEUE_MODE=inline
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# Service URLs
NOTIFICATION_SERVICE_URL=http://notification-service:7101
IDENTITY_SERVICE_URL=http://identity-service:7102
HOTEL_SERVICE_URL=http://hotel-service:7103
BOOKING_SERVICE_URL=http://booking-service:7104
SEARCH_SERVICE_URL=http://search-service:7105

# Cloudinary (enable image uploads)
